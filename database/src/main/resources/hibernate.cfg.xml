<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="dialect">org.hibernate.dialect.MySQL57Dialect</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/online_market?serverTimezone=UTC</property>
        <property name="connection.username">root</property><!--Your username-->
        <property name="connection.password">root</property><!--Your password-->
        <property name="hibernate.hbm2ddl.auto">create</property>

        <mapping class="by.work_company.entity.User"/>
        <mapping class="by.work_company.entity.Order"/>
        <mapping class="by.work_company.entity.Contact"/>
        <mapping class="by.work_company.entity.PersonalInfo"/>
        <mapping class="by.work_company.entity.Product"/>
        <mapping class="by.work_company.entity.Subcategory"/>
        <mapping class="by.work_company.entity.Category"/>
    </session-factory>
</hibernate-configuration>